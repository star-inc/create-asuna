{
  "root": true,
  "extends": [
    "eslint:recommended",
    "nymph"
  ],
  "rules": {
    "linebreak-style": 1,
    "max-len": "off",
    "indent": [
      "error",
      4
    ],
    "quotes": [
      "error",
      "double"
    ]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": false
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2023
  },
  "overrides": [
    {
      "files": [
        "src/models/*.mjs"
      ],
      "rules": {
        "new-cap": "off"
      }
    },
    {
      "files": [
        "*.mjs",
        "src/**/*.mjs"
      ]
    }
  ]
}